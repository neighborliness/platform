---
pagination:
  data: collections.posts
  size: 1
  alias: preview
permalink: "/assets/img/og/{{ preview.data.title | slug }}-preview.svg"
eleventyExcludeFromCollections: true 
---
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="1200" height="628" viewBox="0 0 1200 628" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  {% assign titleInLines =  preview.data.title | splitlines %}
  {% assign numberOfLines = titleInLines.size %}
  {% if numberOfLines == 1 %}
      {% assign verticalStartingPoint = 340 %}
  {% elsif numberOfLines == 2 %}
      {% assign verticalStartingPoint = 290 %}
  {% elsif numberOfLines == 3 %}
      {% assign verticalStartingPoint = 250 %}
  {% elsif numberOfLines == 4 %}
      {% assign verticalStartingPoint = 210 %}
  {% elsif numberOfLines == 5 %}
      {% assign verticalStartingPoint = 160 %}
  {% endif %}
    <rect width="100%" height="100%" fill="#202020" />
    <text font-family="'Giant Head OT', Helvetica, sans-serif" font-size="24" font-weight="bold" fill="#156074">
      <tspan x="81" y="82">{{ site.author }}</tspan>
  </text>
    <text font-family="'Giant Head OT', Helvetica, sans-serif" font-size="24" font-weight="bold" fill="#FFBE25">
        <tspan x="80" y="80">{{ site.author }}</tspan>
    </text>
    <text id="text" font-family="Asap, Helvetica, sans-serif" font-size="64" font-weight="bold" fill="#FFCC55">
      {% for line in titleInLines %}
          {%- if forloop.length > 0 -%}
      <tspan x="80" y="{{ forloop.index0 | times: 80 | plus: verticalStartingPoint }}">{{line}}</tspan>
      {%- endif -%}
      {% endfor %}
    </text>
</svg>