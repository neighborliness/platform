      button.addEventListener("click", toggleDrawer);

      // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è –¥–ª—è drawer –≤ localStorage
      document
